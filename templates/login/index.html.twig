{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connectez vous sur LocaJeu
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="loginBox">
		<img class="user" src="https://i.ibb.co/yVGxFPR/2.png" height="100px" width="100px">
		<h3>Connectez-vous</h3>
		<form action="{{ path('app_login') }}" method="post">
			<div class="inputBox">
				<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Votre email">
				<input type="password" id="password" name="_password" placeholder="Mot de passe">
			</div>
			<input type="submit" value="Connexion">
		</form>
	</div>
{% endblock %}
